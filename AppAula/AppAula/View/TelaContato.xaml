<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAula.View.TelaContato">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Nome" Placeholder="Informe o nome"></Entry>
            <Entry x:Name="Email" Placeholder="Informe o e-mail"></Entry>
            <Entry x:Name="Telefone" Placeholder="Informe o telefone"></Entry>

            <Button x:Name="btnSalvar" Text="Salvar" Clicked="SalvarClicked"></Button>

            <ListView x:Name="Lista"></ListView>

            <Button x:Name="btnRemover" Text="Remover" Clicked="RemoverClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>